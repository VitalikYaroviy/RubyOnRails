<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="text-danger text-center">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container w-50">
    <form class="form-horizontal">
      <div class="form-group">
        <label class="control-label col-sm-2">Title:</label>
        <div class="col-sm">
          <%= form.text_field :title, class: 'form-control'%>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">Body:</label>
        <div class="col-sm">
          <%= form.text_area :body, class: 'form-control'%>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">Priority:</label>
        <div class="col-sm">
          <%= form.number_field :priority, in: 1..5, class: 'form-control'%>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">Date:</label>
        <div class="col-sm">
          <%= form.date_field :dueDate, class: 'form-control'%>
        </div>
      </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
              <label>Status: <%= form.check_box :status, {}, "true", "false" %></label>
            </div>
          </div>
        </div>
      <div class="form-group text-center">
        <div class="col-sm-offset-2 col-sm">
          <%= form.submit(class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    </form>
  </div>

<% end %>
